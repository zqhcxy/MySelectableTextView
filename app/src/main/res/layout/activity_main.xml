<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zqh.myselectabletextview.MainActivity">

    <TextView
        android:id="@+id/select_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:bufferType="spannable"
        android:text="@string/text"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_textview"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="4dp"
        android:text="@string/handerCopy"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/longpass_tip_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn"
        android:padding="10dp"
        android:text="@string/longpass_copy_tip"
        android:textColor="#8d8d8d"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/longpass_tip_tv"
        android:bufferType="spannable"
        android:text="@string/text"
        android:textColor="#000000"
        android:textIsSelectable="true"
        android:textSize="20sp"/>


</RelativeLayout>
